<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  >

  <TextView
    android:id="@+id/month_year"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:textAppearance="@style/CalendarTextAppearance.Month"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:text="July 2025"
    />

  <LinearLayout
    android:id="@+id/calendar_day_titles"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="@integer/title_days_on_calendar"
    android:layout_margin="@dimen/half_dynamic_spacing"
    android:orientation="horizontal"
    app:layout_constraintTop_toBottomOf="@id/month_year">

    <include layout="@layout/day_header"/>

    <include layout="@layout/day_header"/>

    <include layout="@layout/day_header"/>

    <include layout="@layout/day_header"/>

    <include layout="@layout/day_header"/>

    <include layout="@layout/day_header"/>

    <include layout="@layout/day_header"/>

  </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>